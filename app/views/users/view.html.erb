<% provide(:title, "Your Profile") %>
<div class="container w-75 mt-5 mb-4 pt-5">
    <h1 class="text-danger">
        <%= "Welcome to your profile, #{current_user.username}" %>
    </h1>
    <div class="container mt-5">
        <hr class="border-top border-3 border-danger my-2">
        <br/>
        <p>Level: <%= current_user.level %></p>
        <p>Experience: <%= current_user.experience %>/<%= current_user.required_experience(current_user.level)%> XP</p>
        <p><%= experience_bar(current_user) %></p>
    </div>
    <div class="container mt-4">
    <div class="row">
        <% @achievements.each do |achievement| %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <%= image_tag('trophy.png', alt: 'English', class: 'rounded-circle', style: 'width:50px') %>
                    <div class="achievement-card">
                        <h5 class="achievement-title">
                            <%= achievement.achievement_title %>
                        </h5>
                        <p class="achievement-description">
                            <%= achievement.achievement_description %>
                        </p>
                    </div>
                    <!-- Add more achievement details as needed -->
                </div>
            </div>
        </div>
        <% end %>
    </div>
    </div>
</div>
